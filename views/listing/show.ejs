<% layout('/layouts/boilerplate.ejs') %>

    <hr>
    <div class="container mx-auto px-4 py-28">
        <div class="bg-white p-8 rounded shadow-md">
            <h3 class="text-2xl font-bold mb-6">Listing Details</h3>
            <div class="space-y-4">
                <div class="space-y-4">
                    <img class="w-full hover:bg-white hover:opacity-[0.7]	h-48 md:h-72 object-cover rounded-t-lg"
                        src="<%= list.image.url %>" alt="Card image cap">
                    <% if (list.owner?.equals(currentUserId)) { %>
                        <h1 class="font-bold italic">
                           <b>Owner by :</b> <%=list.owner.username%>
                        </h1>
                        <%}%>
                            <h2 class="text-3xl font-bold">
                                <%= list.title %>
                            </h2>
                            <p class="text-gray-700">
                                <%= list.description %>
                            </p>
                            <p class="text-lg font-semibold">Price: &#8377; <%= list.price %>
                            </p>
                            <p class="text-lg font-semibold">Location: <%= list.location %>
                                    <%= list.country %>
                            </p>
                            <div class="flex space-x-4">
                                <a href="/listings/<%= list._id %>/edit" class="text-blue-500 hover:underline">Edit</a>
                                <form method="post" action="/listings/<%= list._id %>?_method=DELETE" class="inline">
                                    <button type="submit" class="text-red-500 hover:underline">Delete</button>
                                </form>

                                <a href="/listings" class="text-gray-500 hover:underline">Go back</a>
                            </div>

                </div>
            </div>
        </div>
    </div>
    </div>