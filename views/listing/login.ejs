
<% layout('/layouts/boilerplate.ejs') %>

<div class="container  pt-20 pb-14">
    <div class="bg-blue-500 p-8 mx-auto -mb-20 rounded-lg shadow-lg w-full max-w-sm">
        <h2 class="text-2xl font-bold mb-6 text-white">Login</h2>
        <form action="/login" method="POST">
            <div class="mb-4">
                <label for="username" class="block text-white">Username</label>
                <input type="text" id="username" name="username" required class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:border-blue-300">
            </div>
            <div class="mb-4">
                <label for="password" class="block text-white">Password</label>
                <input type="password" id="password" name="password" required class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:border-blue-300">
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-white hover:bg-gray-200  font-bold py-2 px-4 rounded focus:outline-none focus:ring">Login</button>
                <a href="/signup" class="text-white hover:underline">Don't have an account?</a>
            </div>
        </form>
    </div>
</div>