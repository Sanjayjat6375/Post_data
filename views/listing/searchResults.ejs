<% layout('/layouts/boilerplate.ejs') %>

<h1 class="text-3xl py-4 font-bold text-gray-800 mb-8 text-center">Search Results for "<%= searchTerm %>"</h1>


<% if (listings.length > 0) { %>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 px-6 py-8">
    <% for (let list of listings) { %>
    <a href="/listings/<%= list._id %>" class="no-underline transform hover:scale-105 transition-transform duration-300">
        <div class="bg-white border border-gray-200 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 overflow-hidden">
            <div class="relative">
                <img class="w-full h-48 object-cover rounded-t-xl transition-transform duration-300 ease-in-out hover:scale-110"
                    src="<%= list.image.url %>" alt="Card image cap">
                <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-75 rounded-t-xl"></div>
                <h5 class="absolute bottom-0 left-0 m-4 text-lg font-bold text-white"><%= list.title %></h5>
            </div>
            <div class="p-4">
                <p class="text-gray-700 mb-2 line-clamp-2"><%= list.description %></p>
                <div class="">
                    <p class="text-gray-800 font-semibold">$<%= list.price %></p>
                    <br>
                    <p class="text-gray-600 text-sm"><%= list.location %>, <br><%= list.country %></p>
                </div>
            </div>
        </div>
    </a>
    <% } %>
</div>
<% } else { %>
<p>No listings found for "<%= searchTerm %>". Try different keywords?</p>
<% } %>
